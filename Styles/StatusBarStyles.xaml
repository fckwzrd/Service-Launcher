<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style for the status bar -->
    <Style x:Key="ModernStatusBarStyle" TargetType="Border">
        <Setter Property="Background" Value="#FF2D2D2D"/>
        <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="Height" Value="40"/>
    </Style>

    <!-- Style for the language selector container -->
    <Style x:Key="LanguageSelectorContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#FF3D3D3D"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="10,6"/>
        <Setter Property="Width" Value="120"/>
    </Style>

    <!-- Style for the time display container -->
    <Style x:Key="TimeDisplayContainerStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="15,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Style for the time text -->
    <Style x:Key="TimeTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

